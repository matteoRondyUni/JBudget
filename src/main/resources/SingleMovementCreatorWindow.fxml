<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseMoved="#loadChoiceBox" prefHeight="406.0" prefWidth="574.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="30.0" layoutY="240.0" prefHeight="20.0" prefWidth="130.0" text="Date: *">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="movementAccountID" layoutX="169.0" layoutY="287.0" onMouseClicked="#showAccountID" prefHeight="26.0" prefWidth="370.0" />
      <TextField fx:id="movementValue" layoutX="169.0" layoutY="137.0" prefHeight="26.0" prefWidth="370.0" promptText="Valore del Movimento (default 0)" />
      <Label layoutX="30.0" layoutY="140.0" prefHeight="20.0" prefWidth="130.0" text="Value: *">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="90.0" prefWidth="130.0" text="Movement Type: *">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="190.0" prefHeight="20.0" prefWidth="110.0" text="Description:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="movementDescription" layoutX="169.0" layoutY="187.0" prefHeight="26.0" prefWidth="370.0" promptText="Descrizione del Movimento" />
      <DatePicker fx:id="movementDate" editable="false" layoutX="169.0" layoutY="237.0" prefHeight="26.0" prefWidth="370.0" promptText="Data del Movimento" />
      <Label layoutX="30.0" layoutY="290.0" prefHeight="18.0" prefWidth="130.0" text="ID Account: *">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button defaultButton="true" layoutX="169.0" layoutY="340.0" mnemonicParsing="false" onAction="#submit" text="Invio">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="239.0" layoutY="340.0" mnemonicParsing="false" onAction="#cancel" text="Annulla">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="30.0" layoutY="30.0" text="Movimento da aggiungere:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="movementType" layoutX="169.0" layoutY="87.0" onMouseClicked="#showMovementType" prefHeight="26.0" prefWidth="370.0" />
      <Label layoutX="424.0" layoutY="331.0" text="* Campo Obbligatorio">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
